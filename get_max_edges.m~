function ind = get_max_edges(delhat,n,Nmax)
% finds the G.Nmax vertices with max degree
% if G.Nmax is unspecified, the default value is used

deg = sum(delhat,1) + sum(delhat,2)';
[degsort IX] = sort(deg,'descend');
%     [Nmax lq1]=getElbows(degsort);
if nar~isfield(G,'Nmax'), G.Nmax=26; end
ind_max_mat=zeros(G.n);
ind_max_mat(IX(1:G.Nmax),IX(1:G.Nmax))=1;
ind=find(ind_max_mat);